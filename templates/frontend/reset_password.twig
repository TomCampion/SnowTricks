{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mote de passe{% endblock %}

{% block content %}
    <section class="flex-column">

        <h1 class="mt-5 text-center">Réinitialisation du mot de passe</h1>

        <div class="custom_container container border form-group d-flex align-items-center flex-column justify-content-around">

            {% for message in app.flashes('failed') %}
                <div class="custom_container mt-3 container alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

            {{ form_start(form) }}
            {{ form_rest(form) }}
            <div class="text-center">
                <button class="btn-lg btn-primary btn-primary-blue-reverse" type="submit">Réinitialisation du mot de passe</button>
            </div>
            {{ form_end(form) }}

        </div>
    </section>
{% endblock %}